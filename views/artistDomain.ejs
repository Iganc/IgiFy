<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artist - <%= artist.name %></title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            line-height: 1.6;
        }
        .artist-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 30px;
        }
        .artist-image {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 20px;
        }
        .artist-info {
            text-align: center;
            margin-bottom: 40px;
        }
        .artist-name {
            font-size: 2.5rem;
            margin: 10px 0;
        }
        .albums-section {
            margin-bottom: 40px;
        }
        .albums-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            grid-gap: 20px;
        }
        .album-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            transition: transform 0.2s;
        }
        .album-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .album-cover {
            width: 100%;
            aspect-ratio: 1/1;
            object-fit: cover;
            border-radius: 4px;
        }
        .section-title {
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            margin-top: 30px;
        }
        .album-title {
            font-size: 1.2rem;
            margin: 10px 0;
        }
        .album-info {
            color: #666;
            font-size: 0.9rem;
        }
        .view-count {
            text-align: right;
            color: #666;
            font-style: italic;
        }
    </style>
</head>
<body>
<div class="artist-header">
    <% if (artist.image_filename) { %>
        <img src="/images/<%= artist.image_filename %>" alt="<%= artist.name %>" class="artist-image">
    <% } else { %>
        <div class="artist-image" style="background-color: #eee; display: flex; justify-content: center; align-items: center;">
            <span>No image</span>
        </div>
    <% } %>
    <h1 class="artist-name"><%= artist.name %></h1>
</div>

<div class="artist-info">
    <p><strong>Genre:</strong> <%= artist.genre %></p>
    <p><%= artist.about %></p>
</div>

<div class="albums-section">
    <h2 class="section-title">Albums</h2>
    <% const regularAlbums = albums ? albums.filter(a => a.type === 'album') : []; %>
    <% if (regularAlbums.length > 0) { %>
        <div class="albums-grid">
            <% regularAlbums.forEach(function(album) { %>
                <div class="album-card">
                    <a href="/a/album/<%= artist.name %>/<%= album.title %>">
                        <% if (album.image_cover_filename) { %>
                            <img src="/images/<%= album.image_cover_filename %>" alt="<%= album.title %>" class="album-cover">
                        <% } else { %>
                            <div class="album-cover" style="background-color: #eee; display: flex; justify-content: center; align-items: center;">
                                <span>No cover</span>
                            </div>
                        <% } %>
                        <h3 class="album-title"><%= album.title %></h3>
                    </a>
                    <div class="album-info">
                        <p>Songs: <%= album.number_of_songs %></p>
                        <p>Length: <%= Math.floor(album.length/60) %>:<%= (album.length % 60).toString().padStart(2, '0') %></p>
                        <p>Released: <%= new Date(album.date_of_upload).toLocaleDateString() %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p>No albums found</p>
    <% } %>
</div>

<div class="albums-section">
    <h2 class="section-title">EPs</h2>
    <% const eps = albums ? albums.filter(a => a.type === 'ep') : []; %>
    <% if (eps.length > 0) { %>
        <div class="albums-grid">
            <% eps.forEach(function(album) { %>
                <div class="album-card">
                    <a href="/a/ep/<%= artist.name %>/<%= album.title %>">
                        <% if (album.image_cover_filename) { %>
                            <img src="/images/<%= album.image_cover_filename %>" alt="<%= album.title %>" class="album-cover">
                        <% } else { %>
                            <div class="album-cover" style="background-color: #eee; display: flex; justify-content: center; align-items: center;">
                                <span>No cover</span>
                            </div>
                        <% } %>
                        <h3 class="album-title"><%= album.title %></h3>
                    </a>
                    <div class="album-info">
                        <p>Songs: <%= album.number_of_songs %></p>
                        <p>Length: <%= Math.floor(album.length/60) %>:<%= (album.length % 60).toString().padStart(2, '0') %></p>
                        <p>Released: <%= new Date(album.date_of_upload).toLocaleDateString() %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p>No EPs found</p>
    <% } %>
</div>

<div class="albums-section">
    <h2 class="section-title">Singles</h2>
    <% const singles = albums ? albums.filter(a => a.type === 'single') : []; %>
    <% if (singles.length > 0) { %>
        <div class="albums-grid">
            <% singles.forEach(function(album) { %>
                <div class="album-card">
                    <a href="/a/single/<%= artist.name %>/<%= album.title %>">
                        <% if (album.image_cover_filename) { %>
                            <img src="/images/<%= album.image_cover_filename %>" alt="<%= album.title %>" class="album-cover">
                        <% } else { %>
                            <div class="album-cover" style="background-color: #eee; display: flex; justify-content: center; align-items: center;">
                                <span>No cover</span>
                            </div>
                        <% } %>
                        <h3 class="album-title"><%= album.title %></h3>
                    </a>
                    <div class="album-info">
                        <p>Songs: <%= album.number_of_songs %></p>
                        <p>Length: <%= Math.floor(album.length/60) %>:<%= (album.length % 60).toString().padStart(2, '0') %></p>
                        <p>Released: <%= new Date(album.date_of_upload).toLocaleDateString() %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p>No singles found</p>
    <% } %>
</div>

<p class="view-count">Views: <%= artist.clickCount %></p>

</body>
</html>